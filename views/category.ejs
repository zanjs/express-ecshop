<body>
<% include header %>

    <div id="body">
        <div class="body_l">
            <div class="subsearch">
                <form id="searchForm" name="searchForm" method="get" action="search.php"
                    onSubmit="return checkSearchForm()">
                    <div>
                        <input name="keywords" type="text" id="keyword" value="" class="searchmobile">
                        <button class="menu_button" name="menu_button" onclick="return checkSearchForm()">
                        </button>
                    </div>
                </form>
            </div>
            <script type="text/javascript">
                function checkSearchForm() {
                    if (document.getElementById('keyword').value) {
                        return false;
                    } else {
                        alert("请输入搜索关键词！");
                        return false;
                    }
                }
            </script>
            <div class="subnav_header">
            </div>
            <div class="subnav">
                <% include subnav %>
            </div>
            <div class="subinfo_header">
                <div class="subinfo_header_left_top10">
                    &nbsp;
                    <a href="javascript:void(0)">
                    </a>
                </div>
            </div>
            <div class="subinfo_body_top10">
                <ul>
<% history.forEach(function(h){ %>
                    <li>
                        <div class="subinfo_body_top10_l">
                            <a href="/goods?_id=<%=h._id%>">
                                <img src="<%=h.goods_img%>" alt=""
                                class="samllimg" />
                            </a>
                        </div>
                        <div class="subinfo_body_top10_r">
                            <p class="subinfo_body_top10_r_1">
                                <a href="/goods?_id=<%=h._id%>" title="">
                                    <%=h.goods_name%>
                                </a>
                            </p>
                            <p class="subinfo_body_top10_r_2">
                                <a href="javascript:void(0)">
                                </a>
                            </p>
                            <p class="subinfo_body_top10_r_3">
                                ￥<%=h.shop_price%>元
                            </p>
                        </div>
                        <div class="clear">
                        </div>
                    </li>
<% }) %>
                </ul>
            </div>
            <div class="subinfo_footer">
            </div>
        </div>
        <div class="body_brand_r">
            <div class="menu">
                当前位置:
                <span>
                    <a href="/">
                        首页
                    </a>
<% family.forEach(function(f){ %>
	                    <code> &gt; </code>
	                    <a href="/category?cat_id=<%=f._id%>">
	                        <%=f.cat_name%>
	                    </a>
<% }); %>
                </span>
            </div>
            <div class="type_nav">
                <ul>
                    <li class="type_nav_li1" >
                        <a href="javascript:void(0)">
                            音乐手机
                        </a>
                    </li>
                    <li  class="type_nav_li2">
                        <a href="javascript:void(0)">
                            GPS导航手机
                        </a>
                    </li>
                    <li  class="type_nav_li3">
                        <a href="javascript:void(0)">
